<%- include('../partials/head') %>
<%- include('../partials/navbar') %>
<main class="page auth-page" data-aos="fade-up">
  <section class="section">
    <div class="section-inner auth-grid">
      <form action="/auth/login" method="POST" class="card auth-form">
        <h1 class="section-title">Kirish</h1>
        <% if (error) { %>
          <p class="error-text"><%= error %></p>
        <% } %>
        <div class="form-group">
          <label>Email (oddiy foydalanuvchilar uchun, admin bo'lsangiz bo'sh qoldiring)</label>
          <input type="email" name="email" />
        </div>
        <div class="form-group">
          <label>Parol / Admin login so'zi</label>
          <input type="password" name="password" required />
        </div>
        <button type="submit" class="btn-primary">Kirish</button>
        <a href="/auth/google" class="btn-outline google-btn">Google bilan kirish</a>
      </form>
    </div>
  </section>
</main>
<%- include('../partials/footer') %>
