<header class="navbar sticky">
  <div class="nav-container">
    <!-- Mobil uchun hamburger tugma -->
    <button class="nav-toggle" type="button" aria-label="Menyuni ochish" aria-expanded="false">
      <span class="nav-toggle-line"></span>
      <span class="nav-toggle-line"></span>
      <span class="nav-toggle-line"></span>
    </button>

    <a href="/" class="logo">Math<span>Club</span></a>

    <nav class="nav-links">
      <a href="/">Bosh sahifa</a>
      <a href="/about">Biz haqimizda</a>
      <a href="/teacher">O‘qituvchi</a>
      <a href="/results">Natijalar</a>
      <a href="/register-course">Kursga yozilish</a>
      <% if (user) { %>
        <a href="/tests">Testlar</a>
        <a href="/leaderboard">Yetakchilar</a>
        <a href="/stars">Star yig'ish uchun</a>
        <a href="/messages" class="nav-link-with-badge">
          Adminga xabarlashish
          <% if (typeof unreadFromAdmin === 'number' && unreadFromAdmin > 0) { %>
            <span class="nav-badge"><%= unreadFromAdmin %></span>
          <% } %>
        </a>
      <% } %>
    </nav>

    <div class="nav-right">
      <% if (!user) { %>
        <a href="/auth/login" class="btn-outline">Kirish</a>
        <a href="/auth/register" class="btn-primary">Ro‘yxatdan o‘tish</a>
      <% } else { %>
        <div class="nav-profile">
          <span class="nav-stars">⭐ <%= typeof user.starsBalance === 'number' ? user.starsBalance : 0 %></span>
          <span class="nav-username"><%= user.name || 'Foydalanuvchi' %></span>
          <div class="avatar-dropdown">
            <div class="avatar-circle">
              <% if (user.avatar) { %>
                <img src="<%= user.avatar %>" alt="avatar" />
              <% } else { %>
                <span><%= user.name ? user.name.charAt(0).toUpperCase() : 'M' %></span>
              <% } %>
            </div>
            <div class="dropdown-menu">
              <a href="/profile">Shaxsiy kabinet</a>
              <a href="/auth/logout">Chiqish</a>
            </div>
          </div>
        </div>
      <% } %>
    </div>
  </div>
</header>

<!-- Mobil menyu overlay va panel -->
<div class="nav-mobile-overlay"></div>
<nav class="nav-mobile" aria-hidden="true">
  <div class="nav-mobile-inner">
    <a href="/" class="nav-mobile-link">Bosh sahifa</a>
    <a href="/about" class="nav-mobile-link">Biz haqimizda</a>
    <a href="/teacher" class="nav-mobile-link">O‘qituvchi</a>
    <a href="/results" class="nav-mobile-link">Natijalar</a>
    <a href="/register-course" class="nav-mobile-link">Kursga yozilish</a>
    <% if (user) { %>
      <a href="/tests" class="nav-mobile-link">Testlar</a>
      <a href="/leaderboard" class="nav-mobile-link">Yetakchilar</a>
      <a href="/stars" class="nav-mobile-link">Star yig'ish uchun</a>
      <div class="nav-mobile-link" style="font-weight:600;display:flex;align-items:center;gap:4px;">
        <span>⭐</span>
        <span><%= typeof user.starsBalance === 'number' ? user.starsBalance : 0 %> stars</span>
      </div>
      <a href="/messages" class="nav-mobile-link nav-mobile-link-with-badge">
        <span>Adminga xabarlashish</span>
        <% if (typeof unreadFromAdmin === 'number' && unreadFromAdmin > 0) { %>
          <span class="nav-badge"><%= unreadFromAdmin %></span>
        <% } %>
      </a>
      <a href="/profile" class="nav-mobile-link">Shaxsiy kabinet</a>
      <a href="/auth/logout" class="nav-mobile-link">Chiqish</a>
    <% } else { %>
      <a href="/auth/login" class="nav-mobile-link">Kirish</a>
      <a href="/auth/register" class="nav-mobile-link">Ro‘yxatdan o‘tish</a>
    <% } %>
  </div>
</nav>

<script>
  (function () {
    var toggle = document.querySelector('.nav-toggle');
    var mobileMenu = document.querySelector('.nav-mobile');
    var mobileOverlay = document.querySelector('.nav-mobile-overlay');
    var mobileLinks = document.querySelectorAll('.nav-mobile-link');

    if (!toggle || !mobileMenu || !mobileOverlay) return;

    function openMenu() {
      toggle.classList.add('nav-toggle-open');
      mobileMenu.classList.add('nav-mobile-open');
      mobileOverlay.classList.add('nav-mobile-overlay-open');
      toggle.setAttribute('aria-expanded', 'true');
      mobileMenu.setAttribute('aria-hidden', 'false');
      document.body.style.overflow = 'hidden';
    }

    function closeMenu() {
      toggle.classList.remove('nav-toggle-open');
      mobileMenu.classList.remove('nav-mobile-open');
      mobileOverlay.classList.remove('nav-mobile-overlay-open');
      toggle.setAttribute('aria-expanded', 'false');
      mobileMenu.setAttribute('aria-hidden', 'true');
      document.body.style.overflow = '';
    }

    toggle.addEventListener('click', function () {
      var isOpen = mobileMenu.classList.contains('nav-mobile-open');
      if (isOpen) {
        closeMenu();
      } else {
        openMenu();
      }
    });

    mobileOverlay.addEventListener('click', closeMenu);

    mobileLinks.forEach(function (link) {
      link.addEventListener('click', function () {
        closeMenu();
      });
    });
  })();
</script>
